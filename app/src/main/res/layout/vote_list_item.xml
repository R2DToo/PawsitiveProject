<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:id="@+id/vote_layout">

    <ImageView
        android:id="@+id/img_vote_dog"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/icon_round"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote ID: "/>
            <TextView
                android:id="@+id/vote_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vote_id"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image ID: "/>
            <TextView
                android:id="@+id/vote_image_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="image_id"/>
        </LinearLayout>
        <TextView
            android:id="@+id/vote_created_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="created_at_placeholder"/>
    </LinearLayout>
</LinearLayout>